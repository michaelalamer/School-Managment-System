<Page x:Class="School_Mangment_Project.Admin_Pages.confirm_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:School_Mangment_Project.Admin_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="774"
      Title="confirm_Page">

    <Grid>
         <Frame Name="functions_frame" NavigationUIVisibility="Hidden" Margin="0,0,100,0" HorizontalAlignment="Right"></Frame>
        <Grid>
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Width="250" Height="350" Margin="100 0 0 0" >
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#0099cc" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
                <ListView x:Name="ConfirmView" Width="250" Height="auto" VerticalAlignment="Center" HorizontalAlignment="Center" SelectionChanged="ConfirmView_SelectionChanged">
                    
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
